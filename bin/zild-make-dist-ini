#!/usr/bin/env perl

use strict;
use File::Share;
use YAML::XS;
use Template::Toolkit::Simple;
use Hash::Merge 'merge';
use IO::All;

my $meta = Load io->file('Meta')->all;
my $cpan = delete($meta->{'=cpan'}) || {};
my $data = merge($cpan, $meta);
($data->{namepath} = $meta->{name}) =~ s/-/\//g;

print tt
    ->path([File::Share::dist_dir('Zilla::Dist')])
    ->data($data)
    ->render('dist.ini');
